---
layout: base.njk
section: blog
permalink: /blog/index.html
---
<div class="page-container">
  <h1>{{title}}</h1>
  {{ layoutContent | safe }}
	<hr/>
	    {% if blogImage %}
        <img src="{{ blogImage }}" alt="Blog Image" class="img-fluid">
    {% endif %}

  {# Article List #}
  {% from "macros/articlelist.njk" import articlelist %}
  {{ articlelist(
    articles = pagination.items | reverse,
    show_tags = true
  ) }}

  {# Pagination #}
  {% include 'partials/pagination.njk' %}
</div>
