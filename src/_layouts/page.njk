---
layout: base.njk
section: page
---
<div class="page-container">
  <h1>{{ title }}</h1>
  {% if subtitle %}
    <p>{{ subtitle }}</p>
  {% endif %}
  <hr/>
  {{ layoutContent | safe }}
  {% if profileImage %}
  <img src="{{ profileImage }}" alt="Profile Image" class="img-fluid">
{% endif %}
</div>
